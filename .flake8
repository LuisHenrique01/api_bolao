[flake8]
max-line-length = 120
exclude =
    .git,
    __pycache__,
    build,
    dist,
    docs/source/conf.py,
    manage.py,
    *migrations*,
    settings,
    venv,
per-file-ignores =
    ./random_file.py:E501
    ./settings/local.py:F405,F403
    ./settings/prod.py:F405,F403,F401
    ./settings/staging.py:F405,F403
    ./accounts/apps.py:F40
